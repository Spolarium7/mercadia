<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@((Mercadia.Store.Securities.WebUser.CurrentStore != null ? Mercadia.Store.Securities.WebUser.CurrentStore.Name : ""))</title>
    <link href="~/content/eshopper/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/content/eshopper/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/content/eshopper/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/content/eshopper/css/price-range.css" rel="stylesheet">
    <link href="~/content/eshopper/css/animate.css" rel="stylesheet">
    <link href="~/content/eshopper/css/main.css" rel="stylesheet">
    <link href="~/content/eshopper/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->
<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills"></ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="nav nav-pills pull-right">
                            <ul class="nav nav-pills">
                                @{if (Mercadia.Store.Securities.WebUser.CurrentUser != null)
                                {
                                    <li><a href="~/storeuser/logoff">Logout</a></li>
                                }
                                else
                                {
                                    <li><a href="~/storeuser/forgotpassword">Forgot Password</a></li>
                                    <li><a href="~/storeuser/register">Register</a></li>
                                    <li><a href="~/storeuser/login">Login</a></li>
                                }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->
        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <h1><img src="@((Mercadia.Store.Securities.WebUser.CurrentStore != null ? Mercadia.Store.Securities.WebUser.CurrentStore.ProfilePic : ""))" alt="@((Mercadia.Store.Securities.WebUser.CurrentStore != null ? Mercadia.Store.Securities.WebUser.CurrentStore.Name : ""))" style="width:75px;height:75px;" /> @((Mercadia.Store.Securities.WebUser.CurrentStore != null ? Mercadia.Store.Securities.WebUser.CurrentStore.Name : ""))</h1>
                        </div>
                        <div class="btn-group pull-right">

                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->
        @RenderSection("headerbottom", required: false)
    </header><!--/header-->

        @RenderBody()

        <footer id="foo">
            @RenderSection("footertop", required: false)
            <div class="footer-bottom">
                <div class="container">
                    <div class="row">
                        <p class="pull-left">Copyright © 2013 E-SHOPPER Inc. All rights reserved.</p>
                        <p class="pull-right">Designed by <span><a target="_blank" href="http://www.themeum.com">Themeum</a></span></p>
                    </div>
                </div>
            </div>

        </footer><!--/Footer-->


    <script src="~/content/eshopper/js/jquery.js"></script>
    <script src="~/content/eshopper/js/price-range.js"></script>
    <script src="~/content/eshopper/js/jquery.scrollUp.min.js"></script>
    <script src="~/content/eshopper/js/bootstrap.min.js"></script>
    <script src="~/content/eshopper/js/jquery.prettyPhoto.js"></script>
    <script src="~/content/eshopper/js/main.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>