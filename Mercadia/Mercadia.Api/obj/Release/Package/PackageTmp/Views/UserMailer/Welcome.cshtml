@using Mvc.Mailer;

<tr>
    <td><h3 style="font-family:Segoe, 'Segoe UI', 'Arial', sans-serif; margin:30px;">Welcome to Mercadia!</h3></td>
</tr>
<tr>
    <td>
        <p style="font-family:Segoe, 'Segoe UI', 'Arial', sans-serif; margin:0 30px 20px;text-align:center;">
            You have now joined the world's best marketplace.<br />Shop and sell at your heart's content.
            <br /><br />
            Verify your account by clicking <a href="@Url.Abs("/")">here</a>. Log on using your registered email address and password, then you're good to go.
        </p>
        <p style="font-family:Segoe, 'Segoe UI', 'Arial', sans-serif; margin:0 30px 20px;text-align:center;">When you confirm your account, you get access to amazing things!</p>
    </td>
</tr>
<tr>
    <td>
        <p style="font-family:Segoe, 'Segoe UI', 'Arial', sans-serif; margin:20px 30px 0; text-align:center;">
            <strong>Your verification code is:</strong>
        </p>
        <p style="font-family:Segoe, 'Segoe UI', 'Arial', sans-serif;color:#FF9046; font-weight:700; font-size:32px; text-align:center; margin:0;">
            @ViewBag.VerificationCode
        </p>

        <p style="font-family:Segoe, 'Segoe UI', 'Arial', sans-serif; margin:15px 30px 30px; text-align:center;">
            <a href="@Url.Abs(Url.Action("VerifyEmail", "Account", new { email = ViewBag.Email }))">@Url.Abs(Url.Action("VerifyEmail", "Account", new { email = ViewBag.Email }))</a><br />
            <span style="font-size:12px; color:#999;">
                (You can also copy and paste the following link into the address bar on your browser and enter the code provided on this email)
            </span>
        </p>
    </td>
</tr>
<tr>
    <td>
        <p style="font-family:Segoe, 'Segoe UI', 'Arial', sans-serif; margin:0 30px 20px;">For questions or concerns please don't hesitate to contact us at <a href="@Url.Abs("/")">support.mercadia@gmail.com</a></p>
    </td>
</tr>
