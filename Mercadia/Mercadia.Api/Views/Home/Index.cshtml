@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Mercadia</title>
    <link rel="shortcut icon" href="~/content/images/favicon.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/content/css/theme/bootstrap.css" media="screen">
    <link rel="stylesheet" href="~/content/css/theme/usebootstrap.css">
    <link rel="stylesheet" href="~/content/css/fontawesome/fontawesomemin.css">
    <link rel="stylesheet" href="~/content/css/theme/custom.css">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="bootstrap/html5shiv.js"></script>
      <script src="bootstrap/respond.min.js"></script>
    <![endif]-->
</head>
<body style="background-image: url('images/background.png');background-repeat: no-repeat;">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="#" class="navbar-brand">MERCADIA</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
    </div>


    <div class="container">

        <div class="page-header" id="banner" style="width:100%;height:100%;background:transparent;">
            <div class="row">
                <div class="col-lg-3">
                    <div class="jumbotron">
                        <img src="~/content/images/ecametrics_logo.png" alt="Ecametrics School Solutions" />
                    </div>
                </div>
                <div class="col-lg-6" style="padding-top:55px;">
                    <h1>Mercadia API</h1>
                    <p style="margin-left:5px;">Mercadia</p>
                    <small style="margin-left:5px;">Shop, ship and share.</small>
                </div>
            </div>
        </div>

        <div class="bs-docs-section">
            <div class="row" style="margin-top:50px;">
                <div class="col-lg-12">
                    &nbsp;
                </div>
            </div>
            <div class="row" style="margin-top:50px;">
                <div class="col-lg-6">

                </div>
                <div class="col-lg-6">
                    <div class="pull-right">
                        <p style="float:right;text-align:right;">
                            <span class="lead">Mercadia</span><br />
                            <small class="text-muted">Developers : <em>Goshen Jimenez</em>, <em>Jerreck Navalta</em> and <em>Deepika</em></small><br />
                            <small class="text-muted">Copyright @String.Format("{0:yyyy}", DateTime.Now) All rights Reserved</small>
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <script src="~/content/js/jquery.js"></script>
    <script src="~/content/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/content/js/bootstrap/usebootstrap.js"></script>
</body>
</html>