@model Mercadia.Web.ViewModels.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
        <div class="panel-body">
            <h3 class="thin text-center">Change Password</h3>
            <hr>

            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="top-margin">
                    @Html.HiddenFor(a => a.Id)
                    <label>Password <span class="text-danger">*</span></label>
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
                <div class="top-margin">
                    <label>Password <span class="text-danger">*</span></label>
                    @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control", placeholder = "Password" })
                </div>
                <hr>

                <div class="row">
                    <div class="col-lg-8">

                    </div>
                    <div class="col-lg-4 text-right">
                        <button class="btn btn-action" type="submit">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>

