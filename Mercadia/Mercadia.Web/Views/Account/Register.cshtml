@model Mercadia.Infrastructure.DTO.Users.UserRequestDto
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}

<header class="page-header">
    <h1 class="page-title">Mercadia Registration</h1>
</header>

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
        <div class="panel-body">
            <h3 class="thin text-center">Register a new account</h3>
            <p class="text-center text-muted">When you register with Mercadia, you gain access to our shops and get the opportunity to setup your store with us!</p>
            <p class="text-center text-muted"> Already a member? <a href="signin.html">Sign in</a>. </p>
            <hr>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="top-margin">
                    <label>First Name</label>
                    @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
                <div class="top-margin">
                    <label>Last Name</label>
                    @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
                <div class="top-margin">
                    <label>Email Address <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <hr>
                <div class="top-margin">
                    <label>Phone number <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(a => a.Phone, new { @class = "form-control", placeholder = "Phone Number" })
                </div>
                <div class="top-margin">
                    <label>Billing Address <span class="text-danger">*</span></label>
                    @Html.TextAreaFor(a => a.DeliveryAddress, new { @class = "form-control", placeholder = "Billing Address" })
                </div>
                <div class="top-margin">
                    <label>Province \ State<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(a => a.DeliveryState, new { @class = "form-control", placeholder = "Province \\ State" })
                </div>
                <div class="top-margin">
                    <label>Country <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(a => a.DeliveryCountry, new { @class = "form-control", placeholder = "Country" })
                </div>
                <hr>

                <div class="row">
                    <div class="col-lg-8">
                        <label class="checkbox">
                            <input type="checkbox">
                            I've read the <a href="page_terms.html">Terms and Conditions</a>
                        </label>
                    </div>
                    <div class="col-lg-4 text-right">
                        <button class="btn btn-action" type="submit">Register</button>
                    </div>
                </div>
            }
        </div>
    </div>
