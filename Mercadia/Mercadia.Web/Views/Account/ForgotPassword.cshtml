@using Recaptcha.Web.Mvc;
@model Mercadia.Web.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}



<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
        <div class="panel-body">
            <h3 class="thin text-center">Forgot Password</h3>
            <hr>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="top-margin">
                    <label>Email Address <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <div class="top-margin">
                    @Html.Recaptcha(publicKey: "6LeaYQsTAAAAAH96mpl1SMMdLOBr_4jzTkAbzwOh", theme: Recaptcha.Web.RecaptchaTheme.Clean, tabIndex: 5)
                </div>
                <hr>

                <div class="row">
                    <div class="col-lg-8">

                    </div>
                    <div class="col-lg-4 text-right">
                        <button class="btn btn-action" type="submit">Send</button>
                    </div>
                </div>
            }
        </div>
    </div>



