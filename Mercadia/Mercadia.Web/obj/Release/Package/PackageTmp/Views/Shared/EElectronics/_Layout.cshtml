<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@((Mercadia.Web.Securities.WebUser.CurrentStore != null ? Mercadia.Web.Securities.WebUser.CurrentStore.Name : ""))</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/content/eelectronics/css/owl.carousel.css">
    <link rel="stylesheet" href="~/content/eelectronics/style.css">
    <link rel="stylesheet" href="~/content/eelectronics/css/responsive.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="user-menu">
                        <ul>
                            @{if (Mercadia.Web.Securities.WebUser.CurrentUser != null)
                            {
                                <li><a href="~/storeuser/logoff">Logout</a></li>
                            }
                            else
                            {
                                <li><a href="~/storeuser/forgotpassword">Forgot Password</a></li>
                                <li><a href="~/storeuser/register">Register</a></li>
                                <li><a href="~/storeuser/login">Login</a></li>
                            }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><img src="@((Mercadia.Web.Securities.WebUser.CurrentStore != null ? Mercadia.Web.Securities.WebUser.CurrentStore.ProfilePic : ""))" alt="@((Mercadia.Web.Securities.WebUser.CurrentStore != null ? Mercadia.Web.Securities.WebUser.CurrentStore.Name : ""))" style="width:75px;height:75px;" /> @((Mercadia.Web.Securities.WebUser.CurrentStore != null ? Mercadia.Web.Securities.WebUser.CurrentStore.Name : ""))</h1>
                    </div>
                </div>

                <div class="col-sm-6">

                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->

    @RenderBody()


    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2015 eElectronics. All Rights Reserved. Coded with <i class="fa fa-heart"></i> by <a href="http://wpexpand.com" target="_blank">WP Expand</a></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/content/eelectronics/js/owl.carousel.min.js"></script>
    <script src="~/content/eelectronics/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/content/eelectronics/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/content/eelectronics/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>