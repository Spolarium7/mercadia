@model Mercadia.Web.ViewModels.Stores.StoreMenuViewModel
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/EElectronics/_Layout.cshtml";
}

<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        foreach (Mercadia.Infrastructure.DTO.Categories.SelCategoryResponseDto category in Model.Categories)
                        {
                            <li><a href="~/store/selectcategory?category=@category.Id">@category.Name</a></li>
                        }
                    }
                    <li><a href="~/store/shoppingcart">Shopping Cart</a></li>
                </ul>
            </div>
        </div>
    </div>
</div> <!-- End mainmenu area -->

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @{
                foreach (Mercadia.Infrastructure.DTO.Products.ProductResponseDto product in Model.Products) { 
                    <div class="col-md-3 col-sm-6">
                        <div class="single-shop-product">
                            <div class="product-upper" style="height:250px;">
                                <a href="#" onclick="openProductModal('@product.Id');" class="openModal">
                                    <img src="@product.ProfilePic" alt="" style="width:250px;">
                                </a>
                            </div>
                            <h2><a href="">@product.Name</a></h2>
                            <div class="product-carousel-price">
                                <ins>@product.Price</ins>
                            </div>

                            <div class="product-option-shop">
                                <input type="text" id="Qty_@product.Id" style="width:30px;height:32px;" />
                                <a class="add_to_cart_button" onclick="addToCart('@product.Id','@product.Name','@product.Price');preventDefault()" href="#">Add to cart</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

    </div>
</div>

<div class="modal fade" id="mdlProductDetails" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Product Details</h4>
            </div>
            <form class="form-horizontal" role="form">
                <div class="modal-body">
                    <div class="col-lg-12" style="margin-bottom:15px;">
                        <div class="col-sm-4 feat-list">
                            <img src="a" alt="" style="max-width:250px;" id="modalProductImage" />
                        </div>
                        <div class="col-sm-6 feat-list col-lg-offset-2">
                            <div class="inner">
                                <h4 id="modalProductName"></h4>
                                <p id="modalProductPrice"></p>
                                <p id="modalProductDescription">
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="clearfix"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Done</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var a = $(".openModal");
            a.click(function (e) {

                e.preventDefault();

            });
        });

        function addToCart(id, name, price) {
            //alert(parseFloat($("#Qty_" + id).val()) > 0);
            if (parseFloat($("#Qty_" + id).val()) > 0) {

                var model = {
                    ProductId: id,
                    Name: name,
                    Price: price,
                    Quantity: $("#Qty_" + id).val()
                }

                $.ajax({
                    url: "@Url.Content("~/store/addtocart")",
                    dataType: "json",
                    data: model,
                    type: "POST",
                    async: false
                }).done(function (obj) {
                    location.reload();
                }).fail(function (obj) {

                    //location.reload();
                });
            }
        }


        function openProductModal(id) {
            //alert(id);
            $.ajax({
                url: "@Url.Content("~/store/product?id=")" + id,
                    dataType: "json",
                    type: "GET",
                    async: false
                }).done(function (obj) {
                    //console.log(obj);
                    $('#modalProductImage').attr("src", obj.ProfilePic);
                    $('#modalProductImage').attr("alt", obj.Name);
                    $('#modalProductName').html(obj.Name);
                    $('#modalProductPrice').html(obj.Price);
                    $('#modalProductDescription').html(obj.Description);
                    $('#mdlProductDetails').modal('show');
                }).fail(function (obj) {

                });
        }
    </script>
}
