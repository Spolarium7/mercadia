@model Mercadia.Web.ViewModels.Categories.CategoriesByStoreViewModel
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}

<header class="page-header">
    <h1 class="page-title">Categories</h1>
</header>

<a href="~/manage/categories/add/@Model.StoreId"><button class="btn btn-action" type="button"><span class="fa fa-plus"></span></button></a>
<br/><br />
<table class="table table-striped table-hover table-res">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th class="td-option">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td><p>@item.Name</p></td>
                <td><p>@item.Description</p></td>
                <td class="td-option">
                    <div class="btn-group">
                        <a href="~/manage/categories/update/@item.Id" title="edit"><span class="fa fa-pencil"></span></a>&nbsp;&nbsp;&nbsp;
                        <a href="~/manage/products/list/@item.Id" title="products"><span class="fa fa-folder-open"></span></a>
                    </div>
                </td>
            </tr>
         }
    </tbody>
</table>



