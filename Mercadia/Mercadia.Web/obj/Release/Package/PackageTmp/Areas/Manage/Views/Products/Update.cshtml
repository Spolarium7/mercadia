@model Mercadia.Infrastructure.DTO.Products.ProductRequestDto
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_RightLayout.cshtml";
}

<h2>Update Product</h2>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body">

            @using (Html.BeginForm("Update", "Products", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="top-margin">
                    <label>Sku</label>
                    @Html.TextBoxFor(a => a.Sku, new { @class = "form-control", placeholder = "Sku" })
                </div>
                <div class="top-margin">
                    @Html.HiddenFor(a => a.StoreId)
                    @Html.HiddenFor(a => a.CategoryId)
                    <label>Product Name</label>
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control", placeholder = "Name" })
                </div>
                <div class="top-margin">
                    <label>Description</label>
                    @Html.TextAreaFor(a => a.Description, new { @class = "form-control", placeholder = "Description" })
                </div>
                <div class="top-margin">
                    <label>Price</label>
                    @Html.TextBoxFor(a => a.Price, new { @class = "form-control", placeholder = "Price" })
                </div>
                <hr>
                <div class="row">
                    <div class="col-lg-8">
                        <label class="checkbox">

                        </label>
                    </div>
                    <div class="col-lg-4 text-right">
                        <button class="btn btn-action" type="submit">Update product</button>
                    </div>
                </div>
            }
        </div>
    </div>


